&parameters_grid
m_r   = 32                 ! radial points           => m_r      grid points (radial)
m_th  = 16                 ! azimuthal Fourier modes => 2*m_th+1 grid points (azimuthal)
m_z0  = 16                 ! axial Fourier modes     => 2*m_z0+1 grid points (axial)
k_th0 = 6.0                ! azimuthal wavenumber    => L_th = 2*pi/k_th0 azimuthal length of grid
k_z0  = 2.6179938779914944 ! axial wavenumber        => L_z =  2*pi/k_z0  axial length of grid
eta   = 0.868d0            ! aspect ratio => r_i = eta/(1-eta),r_o = 1/(1-eta) inner/outer radius
/

&parameters_physics
Re_i = 458.1d0          ! Re_i
Re_o = 0d0              ! Re_o
Gr   = 0d0              ! Gr
Pr   = 0d0              ! Pr
/

&parameters_timestep
numsteps    = 25000     ! number of steps 
init_dt     = 2.0d-5    ! initial size of timestep
variable_dt = T         ! use a variable (=T) or fixed (=F) timestep
maxdt       = 0.01      ! maximum size of timestep
Courant     = 0.25      ! CFL safety factor
/

&parameters_output
fBase_ic = 'WSPEED'     ! identifier for coeff_ (checkpoint) and fields_ (hdf5) files 
dn_coeff = 2500         ! output interval [steps] for coeff (dn_coeff = -1 disables ouput)
dn_ke    = 10           ! output interval [steps] for energy
dn_vel   = 10           ! output interval [steps] for velocity
dn_Nu    = 10           ! output interval [steps] for Nusselt (torque)
dn_hdf5  = 2500         ! output interval [steps] for HDF5 output
print_time_screen = 100 ! output interval [steps] for timestep info to stdout 
/

&parameters_control
restart = 1             ! initialization mode: 0=new run, 1=restart from checkpoint
runtime = 7200          ! maximum runtime [s] for the job
/


